---
import Page from "../layouts/Page.astro";
---

<style>
p {
    margin-bottom: 2rem;
}
h1 {
  margin-bottom: 2rem;
}
@media (min-width: 768px) {
  h1 {
    margin-bottom: 4rem;
  }
}
</style>

<Page>
  <h1 class="text-large">
    Watching
  </h1>
  <section>
    <p>I mostly watch movies on <a href="https://mubi.com/t/web/global/ty2TYanZ">MUBI</a> (referral link), and I really recommend it!</p>
  </section>
  <div id="viz-root" /> <!-- data viz goes here -->
  <script type="module" slot="script">
    import * as d3 from "https://cdn.skypack.dev/d3@7";
    const movies = ["Power of the Dog", "Azor"];
    d3.select("#viz-root")
      .selectAll("p")
      .data(movies)
      .enter()
      .append("p")
      .text((movie) => movie);
  </script>
</Page>
